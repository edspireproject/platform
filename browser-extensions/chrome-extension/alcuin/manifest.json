{
  "name": "Alcuin",
  "short_name": "Alcuin minion for edspire",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Grab the source of certain URLs and auto-post to the edspire cloud",
  "icons": {
    "16": "icons/alcuin16.png",
    "48": "icons/alcuin48.png",
    "128": "icons/alcuin128.png"
  },
  "background": {
    "scripts": ["vendor/jquery-2.1.0.min.js", "src/bg/background.js"],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "contextMenus",
    "http://edspire.int/"
  ],
  "browser_action": {
      "default_title": "Alcuin minion for edspire",
      "default_icon": "icons/alcuin16.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}